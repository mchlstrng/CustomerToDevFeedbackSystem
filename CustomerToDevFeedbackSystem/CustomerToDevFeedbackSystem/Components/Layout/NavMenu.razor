@using CustomerToDevFeedbackSystem.Services
@using static CustomerToDevFeedbackSystem.Services.NavmenuService
@inject INavmenuService NavmenuService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Feedback & Forslag</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        @foreach (var navmenu in Navmenus)
        {
            <div class="nav-item">
                <NavLink class="nav-link" href="@navmenu.Url">
                    <span class="bi bi-list nav-menu" aria-hidden="true"></span> @navmenu.Title
                </NavLink>
            </div>
        }
    </nav>
</div>


@code {
    private List<NavMenuItem> Navmenus { get; set; } = null!;


    protected override void OnInitialized()
    {
        Navmenus = NavmenuService.GetAllProjects();
    }
}